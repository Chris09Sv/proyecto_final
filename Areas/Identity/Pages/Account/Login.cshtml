@page
@model LoginModel

@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Iniciar sesión";
}

<div class="container">
    <div class="row justify-content-center align-items-center min-vh-100">
        <div class="col-12 col-sm-10 col-md-8 col-lg-5 col-xl-4">

            <div class="card shadow-sm border-0">
                <div class="card-body p-4 p-md-5">

                    <div class="text-center mb-4">
                        <div class="d-inline-flex align-items-center justify-content-center rounded-circle bg-primary bg-opacity-10 text-primary mb-2 p-3">
                            <i class="bi bi-calendar2-heart fs-4"></i>
                        </div>
                        <h1 class="h4 mb-1">Sistema de Citas</h1>
                        <p class="text-muted small mb-0">
                            Inicia sesión para gestionar tu consultorio dental
                        </p>
                    </div>

                    <form id="account" method="post" asp-route-returnUrl="@Model.ReturnUrl">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label">Correo electrónico</label>
                            <input asp-for="Input.Email"
                                   class="form-control"
                                   autocomplete="username"
                                   aria-required="true" />
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label">Contraseña</label>
                            <input asp-for="Input.Password"
                                   class="form-control"
                                   autocomplete="current-password"
                                   aria-required="true" />
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div class="form-check">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                <label asp-for="Input.RememberMe" class="form-check-label">
                                    Recuérdame
                                </label>
                            </div>
                            <a id="forgot-password" asp-page="./ForgotPassword" class="small">
                                ¿Olvidaste tu contraseña?
                            </a>
                        </div>

                        <button id="login-submit" type="submit" class="btn btn-primary w-100 mb-2">
                            Iniciar sesión
                        </button>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
