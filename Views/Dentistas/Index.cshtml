@model IEnumerable<SistemaCitasConsultorioDental.Models.Dentista>

@{
    ViewData["Title"] = "Dentistas";
}

<div class="container-fluid">
    <div class="row">


        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 mb-3 border-bottom">
                <h1 class="h3">Dentistas</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <a asp-controller="Dentistas" asp-action="Create" class="btn btn-sm btn-primary">
                        <i class="bi bi-person-plus me-1"></i> Nuevo dentista
                    </a>
                </div>
            </div>

            <div class="row g-3 mb-4">
                <div class="col-md-4 col-sm-6">
                    <div class="card text-bg-light h-100">
                        <div class="card-body">
                            <h6 class="card-title text-muted">Total de dentistas</h6>
                            <p class="display-6 mb-0">@((Model?.Count() ?? 0))</p>
                        </div>
                    </div>
                </div>
            </div>

            <hr class="my-4" />

            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center mb-3">
                <h5 class="mb-0">Listado de dentistas</h5>
            </div>

            @if (Model == null || !Model.Any())
            {
                <div class="alert alert-info">
                    No hay dentistas registrados en este momento.
                </div>
            }
            else
            {
                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-sm table-hover align-middle" id="tablaDentistas">
                                <thead class="table-light">
                                    <tr>
                                        <th>Nombre</th>
                                        <th>Apellido</th>
                                        <th>Teléfono</th>
                                        <th>Email</th>
                                        <th>Horario</th>
                                        <th class="text-end">Acciones</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var d in Model)
                                    {
                                        <tr>
                                            <td>@d.Nombre</td>
                                            <td>@d.Apellido</td>
                                            <td>@d.Telefono</td>
                                            <td>@d.Email</td>
                                            <td>
                                                @(!string.IsNullOrWhiteSpace(d.ResumenHorario)
                                                                                        ? d.ResumenHorario
                                                                                        : "Sin horario definido")
                                    </td>
                                    <td class="text-end">
                                        <a asp-action="Edit" asp-route-id="@d.Id"
                                           class="btn btn-sm btn-outline-secondary me-1"
                                           title="Editar">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@d.Id"
                                           class="btn btn-sm btn-outline-info me-1"
                                           title="Detalles">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@d.Id"
                                           class="btn btn-sm btn-outline-danger"
                                           title="Eliminar">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                                     }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }

            <hr class="my-4" />

            <h5 class="mb-3">Accesos rápidos</h5>
            <div class="row g-2 mb-4">
                <div class="col-md-3 col-sm-6">
                    <a asp-controller="Pacientes" asp-action="Create" class="btn w-100 btn-outline-primary">
                        <i class="bi bi-person-plus me-1"></i> Nuevo paciente
                    </a>
                </div>
                <div class="col-md-3 col-sm-6">
                    <a asp-controller="Citas" asp-action="Create" class="btn w-100 btn-outline-success">
                        <i class="bi bi-calendar-plus me-1"></i> Nueva cita
                    </a>
                </div>
                <div class="col-md-3 col-sm-6">
                    <a asp-controller="Dentistas" asp-action="Create" class="btn w-100 btn-outline-info">
                        <i class="bi bi-person-badge me-1"></i> Nuevo dentista
                    </a>
                </div>
                <div class="col-md-3 col-sm-6">
                    <a asp-controller="Motivos" asp-action="Create" class="btn w-100 btn-outline-warning">
                        <i class="bi bi-plus-circle me-1"></i> Nuevo motivo
                    </a>
                </div>
            </div>
        </main>
    </div>
</div>

@section Scripts {

    <script src="https://cdn.datatables.net/1.13.8/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.8/js/dataTables.bootstrap5.min.js"></script>

    <script src="https://cdn.datatables.net/buttons/2.4.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.bootstrap5.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.html5.min.js"></script>

    <script>
        $(document).ready(function () {
            const opcionesComunes = {
                dom: 'Bfrtip',
                buttons: [
                    {
                        extend: 'csvHtml5',
                        text: '<i class="bi bi-filetype-csv me-1"></i> Exportar CSV',
                        className: 'btn btn-sm btn-outline-secondary'
                    }
                ],
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.13.8/i18n/es-ES.json'
                },
                lengthMenu: [5, 10, 25, 50, 100],
                pageLength: 10
            };

            $('#tablaDentistas').DataTable({
            ...opcionesComunes,
            buttons: [
                {
                    extend: 'csvHtml5',
                    text: '<i class="bi bi-filetype-csv me-1"></i> Exportar CSV',
                    className: 'btn btn-sm btn-outline-secondary',
                    filename: function () {
                        const hoy = new Date().toISOString().slice(0, 10); 
                        return `dentistas_${hoy}`;
                    }
                }
            ],
            order: [[0, 'asc']]
        });

        });
    </script>
}
