@model SistemaCitasConsultorioDental.Models.Cita

@{
    ViewData["Title"] = "Nueva cita";
}

@{
    var fecha = DateTime.Now.ToString("yyyy-MM-dd");
}

<div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-primary text-white">
                <div class="d-flex align-items-center">
                    <i class="bi bi-calendar-plus me-2 fs-4"></i>
                    <div>
                        <h5 class="mb-0">Nueva cita</h5>
                        <small class="text-white-50">Completa la información para agendar la cita.</small>
                    </div>
                </div>
            </div>

            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div class="mb-3">
                        <small class="text-muted">
                            Selecciona primero el dentista y la fecha; luego elige un horario disponible y el paciente.
                        </small>
                    </div>

                    <div class="row g-3">

                        <div class="col-md-4">
                            <label asp-for="Fecha" class="form-label"></label>
                            <input asp-for="Fecha" min="@fecha" class="form-control" type="date" id="Fecha" />
                            <span asp-validation-for="Fecha" class="text-danger"></span>
                        </div>

                        <div class="col-md-8">
                            <label class="form-label">Dentista</label>
                            <select asp-for="DentistaId" class="form-select" id="dentistaSelect">
                                <option value="">Seleccione un dentista...</option>
                            </select>
                            <span asp-validation-for="DentistaId" class="text-danger"></span>
                            <small id="infoHorarioDentista" class="text-muted d-block mt-1">
                                Seleccione fecha y dentista para ver horarios disponibles.
                            </small>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Horario disponible</label>
                            <select class="form-select" id="horarioSelect">
                                <option value="">Seleccione un horario...</option>
                            </select>
                            <small class="text-muted d-block">
                                Los horarios se cargan según el dentista, la fecha y una duración fija de 30 minutos.
                            </small>
                        </div>

                        <div class="col-md-3">
                            <label asp-for="Hora" class="form-label">Hora seleccionada</label>
                            <input asp-for="Hora" class="form-control" type="time" id="Hora" readonly />
                            <span asp-validation-for="Hora" class="text-danger"></span>
                        </div>

                        <div class="col-md-3">
                            <label asp-for="MotivoId" class="form-label">Motivo</label>
                            <select asp-for="MotivoId" asp-items="ViewBag.Motivos" class="form-select">
                                <option value="">Seleccione un motivo...</option>
                            </select>
                            <span asp-validation-for="MotivoId" class="text-danger"></span>
                        </div>

                        <div class="col-12">
                            <label class="form-label">Paciente</label>
                            <select asp-for="PacienteId" class="form-select" id="pacienteSelect">
                                <option value="">Seleccione un paciente...</option>
                            </select>
                            <span asp-validation-for="PacienteId" class="text-danger"></span>
                        </div>
                    </div>

                    <hr class="my-4" />

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            Volver a la lista
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save me-1"></i> Guardar cita
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        const fechaInput    = document.getElementById("Fecha");
        const horarioSelect = document.getElementById("horarioSelect");
        const horaInput     = document.getElementById("Hora");
        const infoHorario   = document.getElementById("infoHorarioDentista");

        function limpiarHorarios() {
            horarioSelect.innerHTML = '<option value="">Seleccione un horario...</option>';
            horaInput.value = "";
            infoHorario.textContent = "Seleccione fecha y dentista para ver horarios disponibles.";
        }

        $('#dentistaSelect').select2({
            theme: 'bootstrap-5',
            placeholder: 'Seleccione un dentista...',
            allowClear: true,
            width: '100%',
            ajax: {
                url: '/Citas/BuscarDentistas',
                dataType: 'json',
                delay: 250,
                data: params => ({ termino: params.term || '' }),
                processResults: data => ({ results: data })
            }
        }).on('change', function () {
            limpiarHorarios();
            cargarHorariosDisponibles();
        });

        $('#pacienteSelect').select2({
            theme: 'bootstrap-5',
            placeholder: 'Seleccione un paciente...',
            allowClear: true,
            width: '100%',
            ajax: {
                url: '/Citas/BuscarPaciente',
                dataType: 'json',
                delay: 250,
                data: params => ({ termino: params.term || '' }),
                processResults: data => ({ results: data })
            }
        });

        fechaInput.addEventListener("change", () => {
            limpiarHorarios();
            cargarHorariosDisponibles();
        });

        function cargarHorariosDisponibles() {
            const fecha = fechaInput.value;
            const dentistaId = $('#dentistaSelect').val();
            const duracion = 30;

            if (!fecha || !dentistaId) return;

            fetch(`/Citas/HorariosDisponibles?dentistaId=${dentistaId}&fecha=${encodeURIComponent(fecha)}&duracionMinutos=${duracion}`)
                .then(r => r.json())
                .then(datos => {
                    horarioSelect.innerHTML = '<option value="">Seleccione un horario...</option>';

                    infoHorario.textContent = `Horario: ${datos.trabajaDe} - ${datos.trabajaHasta}.`;

                    if (!datos.slots || datos.slots.length === 0) {
                        const opt = document.createElement("option");
                        opt.value = "";
                        opt.textContent = "No hay horarios disponibles para este día.";
                        horarioSelect.appendChild(opt);
                        horaInput.value = "";
                        return;
                    }

                    datos.slots.forEach(h => {
                        const opt = document.createElement("option");
                        opt.value = h;
                        opt.textContent = h;
                        horarioSelect.appendChild(opt);
                    });

                    horarioSelect.value = datos.slots[0];
                    horaInput.value = datos.slots[0];
                });
        }

        horarioSelect.addEventListener("change", function () {
            horaInput.value = this.value;
        });
    </script>
}
