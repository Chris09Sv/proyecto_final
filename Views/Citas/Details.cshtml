@model SistemaCitasConsultorioDental.Models.Cita

@{
    ViewData["Title"] = "Detalles";
}

<div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-primary text-white">
                <div class="d-flex align-items-center">
                    <i class="bi bi-calendar-plus me-2 fs-4"></i>
                    <div>
                        <h5 class="mb-0">Detalles cita</h5>
                        <small class="text-white-50">Detalles de la cita.</small>
                    </div>
                </div>
            </div>

            <div class="card-body">
                <form asp-action="Create" method="">
                    <div class="mb-3">
                        <small class="text-muted">
                        </small>
                    </div>

                    <div class="row g-3">

                        <div class="col-md-4">
                            <label asp-for="Fecha" class="form-label"></label>
                            <input asp-for="Fecha" m class="form-control" type="date"  readonly />
                            <span asp-validation-for="Fecha" class="text-danger"></span>
                        </div>

                        <div class="col-md-8">
                            <label class="form-label">Dentista</label>
                            <input asp-for="Dentista.Nombre" class="form-control" id="dentistaSelect" readonly/>
                            <span asp-validation-for="DentistaId" class="text-danger"></span>

                        </div>



                        <div class="col-md-3">
                            <label asp-for="Hora" class="form-label">Hora seleccionada</label>
                            <input asp-for="Hora" class="form-control" type="time" id="Hora" readonly />
                            <span asp-validation-for="Hora" class="text-danger"></span>
                        </div>

                        <div class="col-md-3">
                            <label asp-for="MotivoId" class="form-label">Motivo</label>
                            <input asp-for="Motivo.Descripcion" class="form-control" readonly />
                            <span asp-validation-for="MotivoId" class="text-danger"></span>
                        </div>

                        <div class="col-12">
                            <label class="form-label">Paciente</label>
                            <input asp-for="Paciente.Nombre" class="form-control" id="pacienteSelect" readonly />
                            <span asp-validation-for="PacienteId" class="text-danger"></span>
                        </div>
                    </div>

                    <hr class="my-4" />

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            Volver a la lista
                        </a>

                    </div>
                    <div class="d-flex justify-content-between">
                        <a asp-action="Edit" class="btn btn-outline-primary" asp-route-id="@Model?.Id">Editar</a> |
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


