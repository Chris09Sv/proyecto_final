<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SistemaCitasConsultorioDental</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/SistemaCitasConsultorioDental.styles.css" asp-append-version="true" />

    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" rel="stylesheet" />

    @RenderSection("Styles", required: false)
</head>
<body>
    @if (User?.Identity?.IsAuthenticated ?? false)
    {
        <div class="d-flex app-shell">
            <nav class="sidebar bg-sidebar border-end d-flex flex-column">
                <div class="sidebar-header d-flex align-items-center justify-content-between px-3 py-3">
                    <div class="d-flex align-items-center sidebar-user-info">
                        <div class="avatar-sm rounded-circle d-flex align-items-center justify-content-center me-2">
                            <span>@((User?.Identity?.Name ?? "U")[0])</span>
                        </div>
                        <div class="sidebar-user-text">
                            <div class="fw-semibold small">
                                @(User?.Identity?.Name ?? "Usuario")
                            </div>
                            <div class="text-muted extra-small">
                                Administrador
                            </div>
                        </div>
                    </div>
                    <button id="btnToggleSidebar"
                            class="btn btn-sm btn-outline-light rounded-circle d-none d-md-inline-flex"
                            type="button"
                            title="Colapsar sidebar">
                        <i class="bi bi-chevron-left"></i>
                    </button>
                </div>

                <div class="position-sticky pt-2 flex-grow-1">
                    <ul class="nav flex-column sidebar-nav">
                        <li class="nav-item mb-2 px-3 text-uppercase text-muted sidebar-section-title extra-small">
                            Navegación
                        </li>
                        <li class="nav-item">
                            <a class="nav-link sidebar-link" asp-controller="Citas" asp-action="Hoy">
                                <i class="bi bi-house-door me-2"></i>
                                <span class="link-text">Hoy</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link sidebar-link" asp-controller="Pacientes" asp-action="Index">
                                <i class="bi bi-people me-2"></i>
                                <span class="link-text">Pacientes</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link sidebar-link" asp-controller="Citas" asp-action="Index">
                                <i class="bi bi-calendar-event me-2"></i>
                                <span class="link-text">Citas</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link sidebar-link" asp-controller="Dentistas" asp-action="Index">
                                <i class="bi bi-person-badge me-2"></i>
                                <span class="link-text">Dentistas</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link sidebar-link" asp-controller="Motivos" asp-action="Index">
                                <i class="bi bi-list-task me-2"></i>
                                <span class="link-text">Motivos</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link sidebar-link" asp-controller="HorariosDentistas" asp-action="Index">
                                <i class="bi bi-list-task me-2"></i>
                                <span class="link-text">Horarios Dentistas</span>
                            </a>
                        </li>
                    </ul>
                </div>

                <div class="px-3 pb-3 pt-2 sidebar-footer">
                    <a asp-controller="Account" asp-action="Logout"
                       class="btn btn-sm w-100 btn-outline-light">
                        <i class="bi bi-box-arrow-right me-1"></i>
                        <span class="link-text">Cerrar sesión</span>
                    </a>
                </div>
            </nav>

            <div class="flex-grow-1 d-flex flex-column min-vh-100 main-wrapper">
                <main role="main" class="flex-grow-1 container-fluid py-3 main-content">
                    @RenderBody()
                </main>

                <footer class="border-top footer text-muted mt-auto">
                    <div class="container-fluid py-2">
                        &copy; 2025 - SistemaCitasConsultorioDental -
                        <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </div>
                </footer>
            </div>
        </div>
    }
    else
    {
        <div class="min-vh-100 d-flex flex-column">
            <main role="main" class="flex-grow-1">
                @RenderBody()
            </main>

            <footer class="border-top footer text-muted mt-auto">
                <div class="container py-2">
                    &copy; 2025 - SistemaCitasConsultorioDental -
                    <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
            </footer>
        </div>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
